@model MEF.PROYECTO.Entity.Coordinador.Cls_Ent_Coordinador
@using (Html.BeginForm("CambiaClave", "Seguridad", FormMethod.Post, new { @id = "frmCambioClave", @class = "form-horizontal", @Role = "dialog" }))
{
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h5 class="modal-title">
                    <label>Cambiar Contraseña</label>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color:white">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="col-sm-12">Bienvenida / Bienvenido: <b>@Model.NOMBRE_COMPLETO</b> .</label>
                </div>
                <div class="form-group">
                    <label class="col-sm-12">Es la primera vez que inicia sesión en el sistema con esta contraseña, es necesario que realice el cambio de su contraseña.</label>
                </div>
                <div class="input-group mb-3">
                    <input type="password" placeholder="Contraseña" id="TxtContra" name="TxtContra" class="form-control">
                </div>
                <div class="input-group mb-3">
                    <input type="password" placeholder="Repetir contraseña" id="TxtRContra" name="TxtRContra" class="form-control">
                </div>
                <div class="modal-footer justify-content-between">
                    <div class="col-12" style="text-align:center">
                        <button class="btn btn-danger" id="btnCambioClave">Cambiar Contraseña</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.ID_COORDINADOR)
}
<script type="text/javascript">
    $("#frmCambioClave").validate({
        rules: {
            "TxtContra": {
                required: true,
            },
            "TxtRContra": {
                required: true,
                equalTo: "#TxtContra"
            },
        },
        errorElement: "input",
        highlight: function (element, errorClass, validClass) {
            $(element).addClass('is-invalid');
        },
        unhighlight: function (element, errorClass, validClass) {
            $(element).removeClass('is-invalid');
        }
    });
    jQuery("#btnCambioClave").click(function (e) {
        if ($("#frmCambioClave").valid()) {
            fn_CambioClave();
        }
    });
</script>