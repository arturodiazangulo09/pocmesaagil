@model MEF.PROYECTO.Entity.Administracion.Cls_Ent_Entidades
@{
    ViewBag.Title = "ProcesoFag";
}
 <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-danger">

                <h5 class="modal-title" id="staticBackdropLabel">Visualizar Formato</h5>
                <button type="button" class="close" id="btnCloseModal" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
            
            <div class="modal-body">

                <div class="card card-default">

                    <div class="card-body">

                        <div class="form-group row">

                            <label class="col-sm-3 col-form-label">Tipo de Formato</label>
                            <div class="col-sm-9">

                                <div class="input-group">

                                    <select name="lstFormatoDescarga" id="lstFormatoDescarga" class="custom-select"></select>
                                    <div class="input-group-append">
                                        <button id="btnDescargarFormato" class="btn btn-success" title="Descargar Formato de Carga">Descargar Formato</button>
                                    </div>

                                </div>

                            </div>

                        </div>

                        <div class="form-group row">

                            <table class="table" id="tblCampos">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Descripción</th>
                                        <th scope="col">Obligatorio</th>
                                        <th scope="col">Ejemplo</th>
                                    </tr>
                                </thead>
                                <tbody id="tblFormatoBody"></tbody>
                            </table>
                        
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer justify-content-between">
                <p class="text-danger mr-auto"></p>
                <button id="btnSalirModal" name="btnSalirModal" class="btn btn-dark" type="button">Salir</button>
            </div>
        </div>

    </div>
<script src="@Url.Content("~/Scripts/js/Carga/Carga.js")" type="text/javascript"></script>
<script type="text/javascript">
    Carga.ModalIniciar();
</script>
