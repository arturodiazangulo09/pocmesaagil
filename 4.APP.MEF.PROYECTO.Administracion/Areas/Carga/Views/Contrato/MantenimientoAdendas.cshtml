@model MEF.PROYECTO.Entity.Contratos.Cls_Ent_Adendas
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header bg-danger">

            <h5 class="modal-title" id="staticBackdropLabel">Actualizar Adenda</h5>
            <button type="button" class="close" id="btnCloseModal" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>

        <div class="modal-body">

            <input type="hidden" id="txtIdCargaDetalle" name="txtIdCargaDetalle" value="@Model.ID_CARGA_ADENDA" />
            <input type="hidden" id="txtIdCarga" name="txtIdCarga" value="@Model.ID_CARGA" />
            <input type="hidden" id="txtFechaSuscripcion" name="txtFechaSuscripcion" value="@Model.FEC_SUSCRIPCION" />


            <div class="row">
                <!-- Codigo Contrato -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Código Contrato <b style="color: red">*</b></label>
                        <input type="text" id="txtCodigoContrato" name="txtCodigoContrato" class="form-control" required value="@Model.COD_CONTRATO" />
                    </div>
                </div>

                <!-- Documento Solicitud -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Documento Solicitud</label>
                        <input type="text" id="txtDocumentoSolicitud" name="txtDocumentoSolicitud" class="form-control" value="@Model.DOC_SOLICITUD" />
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Hoja de Ruta -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Hoja de Ruta </label>
                        <input type="text" id="txtHojaRuta" name="txtHojaRuta" class="form-control" value="@Model.HOJA_RUTA" />
                    </div>
                </div>

                <!-- Número -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Número </label>
                        <input type="number" id="txtNumero" name="txtNumero" class="form-control text-right" value="@Model.NUMERO" />
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Fecha de Inicio -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Fecha de Inicio <b style="color: red">*</b></label>
                        <input type="date" id="txtFechaInicio" name="txtFechaInicio" class="form-control" required value="@Model.FEC_INICIO.ToString("yyyy-MM-dd")" />
                    </div>
                </div>

                <!-- Fecha de Culminación -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Fecha de Culminación<b style="color: red">*</b></label>
                        <input type="date" id="txtFechaCulminacion" name="txtFechaCulminacion" class="form-control" required value="@Model.FEC_FIN.ToString("yyyy-MM-dd") == '01/01/01'? '' : @Model.FEC_FIN.ToString("yyyy-MM-dd") " />
                    </div>
                </div>

            </div>

            <div class="row">

                <!-- Fecha de Recepción -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Fecha de Recepción </label>
                        <input type="date" id="txtFechaRecepcion" name="txtFechaRecepcion" class="form-control" value="@Model.FEC_RECEPCION.ToString("yyyy-MM-dd")" />
                    </div>
                </div>

                <!-- Documento -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Documento </label>
                        <input type="text" id="txtDocumento" name="txtDocumento" class="form-control" value="@Model.DOCUMENTO" />
                    </div>
                </div>
            </div>

        </div>

        <div class="modal-footer justify-content-between">
            <p class="text-danger mr-auto">(*) Datos Obligatorios</p>
            <button id="btnGrabarAdenda" class="btn btn-danger" type="button"><i class="clip-checkmark-circle"></i><b id="lbGrabarExpediente">Actualizar</b></button>
            <button id="btnSalirModal" name="btnSalirModal" class="btn btn-dark" type="button" data-dismiss="modal">Cancelar</button>
        </div>
    </div>

</div>
<script src="@Url.Content("~/Scripts/js/Carga/ContratoMantenimientoAdendas.js?v=" + DateTime.Now.ToString("yyyymmmddhhmmss"))" type="text/javascript"></script>
<script>
    ContratosAdendasMantenimiento.Iniciar("@Model.COD_CONTRATO");
</script>

