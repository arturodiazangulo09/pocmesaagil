@model MEF.PROYECTO.Entity.Administracion.Cls_Datos_Mef
@{
    ViewBag.Title = "DatosMef";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-danger card-outline">
            <div class="card-body">
                <ul class="nav nav-tabs" id="custom-content-above-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="custom-content-above-profile-tab" data-toggle="pill" href="#custom-content-above-profile" role="tab" aria-controls="custom-content-above-profile" aria-selected="false">Datos de la entidad</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="custom-content-above-generales-tab" data-toggle="pill" href="#custom-content-above-generales" role="tab" aria-controls="custom-content-above-generales" aria-selected="false">PIA / PIM</a>
                    </li>
                </ul>

                <div class="tab-content" id="custom-content-above-tabContent">

                    <div class="tab-pane fade show active" id="custom-content-above-profile" role="tabpanel" aria-labelledby="custom-content-above-profile-tab">
                        <div class="col-md-12">
                            <div class="card card-default">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <div class="form-group mb-1">
                                                <label>RUC N°:<b style="color:red">*</b></label>
                                                @Html.TextBoxFor(model => model.RUC, new { @class = "form-control", @maxlength = "11", @onkeypress = "DESARROLLO.SOLONUMEROS(event);", @disabled = "disabled" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group mb-1">
                                                <label>Nombre:<b style="color:red">*</b></label>
                                                @Html.TextBoxFor(model => model.ENTIDAD, new { @class = "form-control", @maxlength = "500", @onkeypress = "DESARROLLO.SOLONUMEROS(event);", @disabled = "disabled" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group mb-1">
                                                <label>Dirección:<b style="color:red">*</b></label>
                                                @Html.TextBoxFor(model => model.DIRECCION, new { @class = "form-control", @maxlength = "500" })
                                            </div>
                                        </div>
                                    </div>
                                    <label style="background: #d6d8d9; border-color: #c6c8ca;width:100%;padding:5px 10px ">
                                        Representante de la entidad
                                    </label>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <div class="form-group mb-1">
                                                <label>DNI N° :<b style="color:red">*</b></label>
                                                <div class="input-group mb-1">
                                                    @Html.TextBoxFor(model => model.DNI_AUTORIDAD, new { @class = "form-control", @maxlength = "8", @onkeypress = "DESARROLLO.SOLONUMEROS(event);" })
                                                    <div class="input-group-prepend">
                                                        <button id="btnBuscarDni" type="button" class="btn btn-danger"><i class="fas fa-search"></i></button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div class="form-group mb-1">
                                                <label>Apellido Paternos:<b style="color:red">*</b></label>
                                                @Html.TextBoxFor(model => model.APE_PATERNO, new { @class = "form-control", @maxlength = "500" })
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group mb-1">
                                                <label>Apellido Maternos:<b style="color:red">*</b></label>
                                                @Html.TextBoxFor(model => model.APE_MATERNO, new { @class = "form-control", @maxlength = "500" })
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group mb-1">
                                                <label>Nombres:<b style="color:red">*</b></label>
                                                @Html.TextBoxFor(model => model.NOMBRES, new { @class = "form-control", @maxlength = "500" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-3">
                                            <div class="form-group mb-1">
                                                <label>Tipo Resolución:<b style="color:red">*</b></label>
                                                @Html.TextBoxFor(model => model.TIPO_RESOLUCION, new { @class = "form-control", @maxlength = "500" })
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group mb-1">
                                                <label>N° Resolución:<b style="color:red">*</b></label>
                                                @Html.TextBoxFor(model => model.NUMERO_RESOLUCION, new { @class = "form-control", @maxlength = "500", })
                                            </div>
                                        </div>
                                    </div>
                                    <!-- <label style="background: #d6d8d9; border-color: #c6c8ca;width:100%;padding:5px 10px ">
                                         Datos del periodo actual
                                     </label>
                                     <div class="row">
                                         <div class="col-sm-3">
                                             <div class="form-group mb-1">
                                                 <label>PIA:<b style="color:red">*</b></label>
                                                 @Html.TextBoxFor(model => model.PIA, new { @class = "form-control", @maxlength = "500" })
                                             </div>
                                         </div>
                                         <div class="col-sm-3">
                                             <div class="form-group mb-1">
                                                 <label>PIM:<b style="color:red">*</b></label>
                                                 @Html.TextBoxFor(model => model.PIM, new { @class = "form-control", @maxlength = "500", })
                                             </div>
                                         </div>
                                     </div>
                                    -->
                                    <div class="row">
                                        <div class="col-sm-12" style="text-align:right">
                                            <button id="btnGrabarDatosEntidad" type="button" class="btn btn-danger">Actualizar Datos de Entidad</button>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="tab-pane fade" id="custom-content-above-generales" role="tabpanel" aria-labelledby="custom-content-above-generales-tab">


                        <div class="col-md-12">
                            <button id="btnNuevo" type="button" class="btn btn-danger" onclick="fn_NuevoEditar('0')">Nueva Registro </button>
                        </div>
                        <div class="col-md-12" style="margin-top:20px">
                            <div class="table-responsive">
                                <table id="TableGenerales" class="table table-bordered dt-responsive dataTable table-hover" style="width:100%">
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modalNuevoEdita" name="modalFormatoPago" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true"></div>



<div class="modal" id="myModalCargando" data-keyboard="false" aria-labelledby="myModalLabel" aria-hidden="true" style="z-index: 1051; padding-top: 300px; background-color: rgba(1,1,1,0.2);">
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-danger" style="width: 3.5rem; height: 3.5rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <label style="font-weight:600;color:white;width:100%;text-align:center;font-size:1.2rem">Cargando..</label>
</div>
<script src="@Url.Content("~/Scripts/js/Remove.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/Administracion/General.js?v=" + DateTime.Now.ToString("yyyymmddhhmmss"))" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Remove_RemoverClases("liInformacion");
        CrearGrillaGenerales();
        CargarGrillaGenerales();
    });
    jQuery("#btnBuscarDni").click(function (e) {
        $("#myModalCargando").fadeIn(100, function () {
            Fun_ValidarPersonaDni();
        });
    });
    function Fun_ValidarPersonaDni() {
        $.ajax({
            url: baseUrl + "Administracion/Entidad/ListaDetallePersona?dni=" + $("#DNI_AUTORIDAD").val(),
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (p) {
                if (p.ACCION == '1') {

                    if (p.APELLIDO_PATERNO != "-") {
                        $("#APE_PATERNO").attr('disabled', 'disabled');
                        $("#APE_MATERNO").attr('disabled', 'disabled');
                        $("#NOMBRES").attr('disabled', 'disabled');

                        $("#APE_PATERNO").val(p.APE_PATERNO);
                        $("#APE_MATERNO").val(p.APE_MATERNO);
                        $("#NOMBRES").val(p.NOMBRES);
                    } else {
                        $("#APE_PATERNO").val("");
                        $("#APE_MATERNO").val("");
                        $("#NOMBRES").val("");
                        DESARROLLO.PROCESO_ALERT('Atención', 'El número de documento no es válido.');
                    }
                    $("#myModalCargando").css("display", "none");
                } else {
                    $("#APE_PATERNO").removeAttr('disabled');
                    $("#APE_MATERNO").removeAttr('disabled');
                    $("#NOMBRES").removeAttr('disabled');
                    DESARROLLO.PROCESO_ALERT('Atención', 'Problemas al consultar el número de documento, ingrese su información manualmente.');
                    console.log(p.DES_ERROR);
                    $("#myModalCargando").css("display", "none");
                }
            }
        });

    }
    function fn_UpdDatosEntidad(Accion, Obs) {
        item = {
            RUC: $("#RUC").val(),
            DIRECCION: $("#DIRECCION").val(),
            DNI_AUTORIDAD: $("#DNI_AUTORIDAD").val(),
            APE_PATERNO: $("#APE_PATERNO").val(),
            APE_MATERNO: $("#APE_MATERNO").val(),
            NOMBRES: $("#NOMBRES").val(),
            TIPO_RESOLUCION: $("#TIPO_RESOLUCION").val(),
            NUMERO_RESOLUCION: $("#NUMERO_RESOLUCION").val(),

        };
        var url = baseUrl + 'Administracion/Entidad/UpdateDatosMef';
        var respuesta = DESARROLLO.Ajax(url, item, false);
        if (respuesta != null && respuesta != "") {
            if (respuesta.success) {
                DESARROLLO.PROCESO_CORRECTO(respuesta.message);
            } else {
                DESARROLLO.PROCESO_ERROR(respuesta.extra);
            }
        }
    }
    function Validate() {
        var result = true;
        if ($("#RUC").val() == "") {
            $("#RUC").addClass('is-invalid'); result = false;
        } else { $("#RUC").removeClass('is-invalid'); }

        if ($("#ENTIDAD").val() == "") {
            $("#ENTIDAD").addClass('is-invalid'); result = false;
        } else { $("#ENTIDAD").removeClass('is-invalid'); }

        if ($("#DIRECCION").val() == "") {
            $("#DIRECCION").addClass('is-invalid'); result = false;
        } else { $("#DIRECCION").removeClass('is-invalid'); }

        if ($("#DNI_AUTORIDAD").val() == "") {
            $("#DNI_AUTORIDAD").addClass('is-invalid'); result = false;
        } else { $("#DNI_AUTORIDAD").removeClass('is-invalid'); }

        if ($("#APE_PATERNO").val() == "") {
            $("#APE_PATERNO").addClass('is-invalid'); result = false;
        } else { $("#APE_PATERNO").removeClass('is-invalid'); }

        if ($("#APE_MATERNO").val() == "") {
            $("#APE_MATERNO").addClass('is-invalid'); result = false;
        } else { $("#APE_MATERNO").removeClass('is-invalid'); }

        if ($("#NOMBRES").val() == "") {
            $("#NOMBRES").addClass('is-invalid'); result = false;
        } else { $("#NOMBRES").removeClass('is-invalid'); }

        if ($("#TIPO_RESOLUCION").val() == "") {
            $("#TIPO_RESOLUCION").addClass('is-invalid'); result = false;
        } else { $("#TIPO_RESOLUCION").removeClass('is-invalid'); }

        if ($("#NUMERO_RESOLUCION").val() == "") {
            $("#NUMERO_RESOLUCION").addClass('is-invalid'); result = false;
        } else { $("#NUMERO_RESOLUCION").removeClass('is-invalid'); }


        return result;
    }
    jQuery("#btnGrabarDatosEntidad").click(function (e) {
        if (Validate()) {
            DESARROLLO.PROCESO_CONFIRM("</br>¿Desea <b>actualizar</b> la información de la entidad.", function (r) {
                if (r) {
                    fn_UpdDatosEntidad();
                }
            });
        }
    });
</script>