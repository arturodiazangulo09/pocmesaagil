    <link rel="stylesheet" type="text/css" href="~/assets/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
</head>
<body>
    <div style="display:flex;flex-direction:row-reverse" >
        <img src="~/assets/img/mef.jpg" alt="Logo" width="300" style="float:right;margin:1em 1em 0em 0em">
    </div>
        <div class="row" style="display: block; margin-top: 5rem">

            <!-- Main content -->
            <section class="content">

                <div class="error-page">
                    <h2 class="headline text-primary">
                        <i class="fas fa-user-lock text-danger"></i>
                    </h2>

                    <div class="error-content">
                        <h3><i class="fas fa-exclamation-triangle text-danger"></i> Oops! Usted no cuenta con los permisos necesarios para acceder a este recurso</h3>

                        <p>
                            Si considera necesario contácte con el administrador del Sistema.
                        </p>

                        <form class="search-form">
                            @using (Html.BeginForm("LoGout", "Seguridad", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <ul class="nav nav-pills">
                                    <li class="active"><a class="btn bg-secondary" href="/">Regresar</a></li>
                                </ul>

                            }
                            <!-- /.input-group -->
                        </form>
                    </div>
                    <!-- /.error-content -->
                </div>
                <!-- /.error-page -->
            </section>
            <!-- /.content -->
        </div>


        <footer style="text-align:center;margin-top:10rem">

            <strong>
                <script>
                    document.write(new Date().getFullYear())
                </script>
                &copy; Ministerio de Economia  y Finanzas
            </strong>
        </footer>


</body>
